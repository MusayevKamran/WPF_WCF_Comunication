<Window x:Class="WpfClient.SelectLinePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="Select Line" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        >
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Select Line number" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,14,0,0" Width="124"/>

        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Width="120" Margin="148,13,0,0" 
                  Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged"/>

        <Button Click="Save" Content="Save" HorizontalAlignment="Left" Margin="100,123,0,0" VerticalAlignment="Top" Width="96" Height="26"/>

    </Grid>


</Window>
